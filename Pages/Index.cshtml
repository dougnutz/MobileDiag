@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 ><img width="90%" src="../img/title.png"></h1>
    <h2 class="fst-italic ">The Best Automotive Diagnostics Team in North Ga!</h2>
    <h3><a class="phone" href="tel:678-557-6405">678-557-6405</a></h3>
</div>

<div class="triangle"></div>
<div class="price-list row">
    <div class="col-md-6">
        @for(int i = 0, count = IndexModel.Prices.Count; i < count ; i++)
        {
            <div class="row">
                <div class="name col-md-9">
                    @IndexModel.Prices[i].Name
                </div>
                <div class="price col-md-3">
                    @IndexModel.Prices[i].Price
                </div>
            </div>
            <div class="info row">
            <div class="col-md-10">@IndexModel.Prices[i].Description</div>
            </div>
            @if (i==count/2)
            {
                 @Html.Raw("</div><div class=\"col-md-6\">")
            }
        }
    </div>
</div>